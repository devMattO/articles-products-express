<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    title Add New Product
  body
    h1 Add New Product, yo!
    form(method="POST", action="/products/")
      div.input
        span.label Name
        input(type="text", name="name", placeholder="bike")
      div.input
        span.label Price $
        input(type="text", name="price", placeholder="200")
      div.input
        span.label Inventory
        input(type="text", name="inventory", placeholder="100")
      div.actions
        input(type="submit", value="Submit")
